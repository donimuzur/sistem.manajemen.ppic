@model IEnumerable<sistem.manajemen.ppic.website.Models.BaseModel>
    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <div id="mymodal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color:#283F90">
                            @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>*@
                            <h4 class="modal-title" style="color:white"> @item.MessageTitle</h4>
                        </div>
                        <div class="modal-body">
                            <p>
                                @foreach (var msg in item.MessageBody)
                                {
                                    @(new HtmlString(msg))
                                }
                            </p>
                        </div>
                        <div class="modal-footer">
                            <input type="button" class="btn btn-grey" data-dismiss="modal" value="Ok" />
                        </div>
                    </div>
                </div>
            </div>
        }
        <script type="text/javascript">
            $(document).ready(function () {
                $('#mymodal').modal('show');
            });
        </script>
    }
