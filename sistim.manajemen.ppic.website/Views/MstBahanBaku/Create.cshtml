@model sistem.manajemen.ppic.website.Models.MstBahanBakuModel
@{
    ViewBag.Title = "Gudang Bahan Baku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @using (Html.BeginForm("Create", "MstBahanBaku", FormMethod.Post, new { @id = "IdForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Nama Barang</label>
                            @Html.TextBoxFor(model => model.NAMA_BARANG, new { @class = "form-control", @placeholder = "Nama Barang", @required = "required", @style = "text-transform:uppercase;" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Stock</label>
                            @Html.TextBoxFor(model => model.STOCK, new { @class = "form-control", @placeholder = "Stock", @disabled = "disabled" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Simpan</button>
                            <a href="@Url.Action("Index","MstBahanBaku")" class="btn btn-default">Batal</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">

    </script>
}
