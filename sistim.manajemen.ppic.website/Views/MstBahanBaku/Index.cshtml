@model sistem.manajemen.ppic.website.Models.MstBahanBakuViewModel
@{
    ViewBag.Title = "Gudang Bahan Baku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="sparkline13-list">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h1>&nbsp;</h1>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <div class="add-product">
                                <a href="@Url.Action("Create","MstBahanBaku")">Tambah Bahan Baku</a>
                            </div>
                            <table id="table" class="stripe row-border order-column" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Action</th>
                                        <th>Nama Barang</th>
                                        <th>Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListData)
                                    {
                                        <tr>
                                            <td>@Html.Raw(Model.ListData.IndexOf(item) + 1)</td>
                                            <td>
                                                <a href="@Url.Action("Edit","MstBahanBaku",new {@id=item.ID})" data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                <a href="@Url.Action("Details","MstBahanBaku",new {@id=item.ID})" data-toggle="tooltip" title="Details" class="pd-setting-ed"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                            </td>
                                            <td>@Html.Raw(item.NAMA_BARANG.ToUpper())</td>
                                            <td>@Html.Raw(String.Format("{0:N}", item.STOCK))</td>
                                        </tr>
                                    }  
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#table').DataTable({
                "dom": 'lf<"table-overflow"t>pi',
                orderCellsTop: true,
                scrollY: "300px",
                scrollX: true,
                scrollCollapse: true,
                fixedColumns: true
            });
        });
    </script>
}