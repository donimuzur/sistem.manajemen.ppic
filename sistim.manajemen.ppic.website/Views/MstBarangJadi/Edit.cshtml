@model sistem.manajemen.ppic.website.Models.MstBarangJadiModel
@{
    ViewBag.Title = "Gudang Barang Jadi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
           
            @using (Html.BeginForm("Edit", "MstBarangjadi", FormMethod.Post, new { @id = "IdForm", @class = "panel-body" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Nama Barang</label>
                            @Html.HiddenFor(model => model.ID)
                            @Html.HiddenFor(model => model.CREATED_DATE)
                            @Html.HiddenFor(model => model.CREATED_BY)
                            @Html.HiddenFor(model => model.MODIFIED_BY)
                            @Html.HiddenFor(model => model.MODIFIED_DATE)
                            @Html.TextBoxFor(model => model.NAMA_BARANG, new { @class = "form-control", @placeholder = "Nama Barang", @required = "required", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Komposisi</label>
                            @Html.TextBoxFor(model => model.KOMPOSISI, new { @class = "form-control", @placeholder = "Komposisi", @required = "required", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Stock Awal</label>
                            @Html.TextBoxFor(model => model.STOCK_AWAL, new { @class = "form-control", @placeholder = "Stock", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Stock</label>
                            @Html.TextBoxFor(model => model.STOCK, new { @class = "form-control", @placeholder = "Stock", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Status</label>
                            @Html.DropDownListFor(model => model.STATUS, Model.StatusList, "-- Please Select --", new { @class = "form-control", @required = "required"})
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Bentuk</label>
                            @Html.DropDownListFor(model => model.BENTUK, Model.BentukList, "-- Please Select --", new { @class = "form-control", @required = "required", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Bentuk Lain</label>
                            @Html.TextBoxFor(model => model.BENTUK_LAIN, new { @class = "form-control", @placeholder = "Bentuk Lain", @disabled = "disabled" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Kemasan</label>
                            @Html.DropDownListFor(model => model.KEMASAN, Model.KemasanList, "-- Please Select --", new { @class = "form-control", @required = "required", @disabled = "disabled" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                            <a href="@Url.Action("Index","MstBarangJadi")" class="btn btn-default">Batal</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="changes" class="panel-body">
        @Html.Partial("_ChangesLog")       
    </div>
</div>
@section scripts {
    <script type="text/javascript">
       $(document).ready()
       {
           initilize();
       }

       $("#BENTUK").change(function () {
           initilize();
       });

       function initilize() {
           $('#BENTUK_LAIN').prop('disabled', true);
           $('#BENTUK_LAIN').prop('required', false);

           var Bentuk = $('#BENTUK').val();
           if (Bentuk == "Lain-Lain") {
               $('#BENTUK_LAIN').prop('disabled', false);
               $('#BENTUK_LAIN').prop('required', true);
           }
       }
    </script>
}
