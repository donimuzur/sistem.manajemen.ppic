@model sistem.manajemen.ppic.website.Models.MstBarangJadiModel
@{
    ViewBag.Title = "Master Barang Jadi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@Model.Tittle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Master Barang Jadi</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
         
        </div>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Form Barang jadi</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @using (Html.BeginForm("Create", "MstBarangjadi", FormMethod.Post, new { @id = "IdForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label">Nama Barang</label>
                                            @Html.TextBoxFor(model => model.NAMA_BARANG, new { @class = "form-control", @placeholder = "Nama Barang", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Komposisi</label>
                                            @Html.TextBoxFor(model => model.KOMPOSISI, new { @class = "form-control", @placeholder = "Komposisi", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Stock Awal</label>
                                            @Html.TextBoxFor(model => model.STOCK_AWAL, new { @class = "form-control", @placeholder = "Stock", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Stock</label>
                                            @Html.TextBoxFor(model => model.STOCK, new { @class = "form-control", @placeholder = "Stock", @disabled = "disabled" })
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Status</label>
                                            @Html.DropDownListFor(model => model.STATUS, Model.StatusList, "-- Please Select --", new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label">Bentuk</label>
                                            @Html.DropDownListFor(model => model.BENTUK, Model.BentukList, "-- Please Select --", new { @class = "form-control", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Bentuk Lain</label>
                                            @Html.TextBoxFor(model => model.BENTUK_LAIN, new { @class = "form-control", @placeholder = "Bentuk Lain" })
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Kemasan</label>
                                            @Html.DropDownListFor(model => model.KEMASAN, Model.KemasanList, "-- Please Select --", new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Simpan</button>
                                            <a href="@Url.Action("Index","MstBarangJadi")" class="btn btn-default">Batal</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   <script type="text/javascript">
       $(document).ready()
       {
           initilize();
       }

       $("#BENTUK").change(function () {
           initilize();
       });

       function initilize() {
           $('#BENTUK_LAIN').prop('disabled', true);
           $('#BENTUK_LAIN').prop('required', false);
         
           var Bentuk = $('#BENTUK').val();
           if (Bentuk == "Lain-Lain") {
               $('#BENTUK_LAIN').prop('disabled', false);
               $('#BENTUK_LAIN').prop('required', true);
           }
       }
    </script>
}
