@using System.Web.Optimization
@model sistem.manajemen.ppic.website.Models.TrnSpbViewModel

@{
    ViewBag.Title = "Surat Permintaan Barang (SPB)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@Model.Tittle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>SPB</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Import","TrnSpb")" class="ladda-button ladda-button-import btn btn-success" data-style="zoom-in">Import .xls</a>
            <a href="#" class="ladda-button ladda-button-export btn btn-success" data-style="zoom-in">Export .xls</a>
            <a href="@Url.Action("Create","TrnSpb")" class="ladda-button ladda-button-tambah btn btn-success" data-style="zoom-in">Tambah</a>
        </div>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>List SPB</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content tooltip-demo">
                    <h4>Tooltip Demo <small>Background color more gentle.</small></h4>
                  
                    <table class="table table-striped table-bordered table-hover dataTables-List">
                        <thead>
                            <tr>
                                <th style="text-align:center;min-width:20px">No</th>
                                <th style="text-align:center;min-width:20px">Status</th>
                                <th style="text-align:center;min-width:50px;">Action</th>
                                <th style="text-align:center;min-width:80px">Tanggal</th>
                                <th style="text-align:center;min-width:150px">No SPB</th>
                                <th style="text-align:center;min-width:150px">Produk</th>
                                <th style="text-align:center;min-width:200px;">Konsumen</th>
                                <th style="text-align:center;min-width:100px">Wilayah</th>
                                <th style="text-align:center;min-width:100px;">Kwantum</th>
                                <th style="text-align:center;min-width:100px;">Harga Jual</th>
                                <th style="text-align:center;min-width:100px;">Harga Loko</th>
                                <th style="text-align:center;min-width:100px;">Batas Kirim</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListData.OrderByDescending(x => x.TANGGAL).ToList())
                            {
                                <tr>
                                    <td style="text-align:center;">@Html.Raw(Model.ListData.IndexOf(item) + 1)</td>
                                    <td  style="text-align:center;">
                                        @{
                                            if (item.STATUS == sistem.manajemen.ppic.core.Enums.StatusDocument.Closed)
                                            {
                                                <a><span class="badge badge-success">Selesai</span></a>
                                            }
                                            else if (item.STATUS == sistem.manajemen.ppic.core.Enums.StatusDocument.Cancel)
                                            {
                                                <a><span class="badge badge-warning">Cancel</span></a>
                                            }
                                            else
                                            {
                                                <a><span class="badge badge">Open</span></a>
                                            }
                                        }
                                    </td>
                                    <td class="tooltip-demo" style="text-align:center;">
                                       
                                        @if (Model.CurrentUser.USERNAME == item.CREATED_BY && item.STATUS !=sistem.manajemen.ppic.core.Enums.StatusDocument.Closed && item.STATUS != sistem.manajemen.ppic.core.Enums.StatusDocument.Cancel)
                                        {
                                           <a href="@Url.Action("Edit","TrnSpb",new {@id=item.ID})"   data-toggle="tooltip" data-placement="bottom"  title="Edit" ><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        }
                                        <a href="@Url.Action("Details","TrnSpb",new {@id=item.ID})" data-toggle="tooltip" data-placement="bottom" title="Details"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                    </td>
                                    <td>@Html.Raw(item.TANGGAL.Value.ToString("dd MMM yyyy"))</td>
                                    <td>@Html.Raw(item.NO_SPB)</td>
                                    <td class="text-uppercase">@Html.Raw(item.NAMA_PRODUK)</td>
                                    <td class="text-uppercase">@Html.Raw(item.NAMA_KONSUMEN)</td>
                                    <td class="text-uppercase">@Html.Raw(item.WILAYAH)</td>
                                    <td>@Html.Raw(string.Format("{0:N}", item.KUANTUM))</td>
                                    <td>@Html.Raw("Rp. " + string.Format("{0:N}", item.HARGA_JUAL))</td>
                                    <td>@Html.Raw("Rp. " + string.Format("{0:N}", item.HARGA_LOKO))</td>
                                    <td>@Html.Raw(item.BATAS_KIRIM.HasValue ? item.BATAS_KIRIM.Value.ToString("dd MMM yyyy") : "")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Contents/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/laddaStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/ladda")

    <script type="text/javascript">
        $(document).ready(function () {
            var l_ladda_export = $('.ladda-button-export').ladda();
            l_ladda_export.click(function () {
                // Start loading
                l_ladda_export.ladda('start');
                // Do something in backend and then stop ladda
                // setTimeout() is only for demo purpose
                setTimeout(function () {
                    l_ladda_export.ladda('stop');
                }, 20000)
            });

            var l_ladda_import = $('.ladda-button-import').ladda();
            l_ladda_import.click(function () {
                // Start loading
                l_ladda_import.ladda('start');
                // Do something in backend and then stop ladda
                // setTimeout() is only for demo purpose
                setTimeout(function () {
                    l_ladda_import.ladda('stop');
                }, 20000)
            });

            var l_ladda_tambah = $('.ladda-button-tambah').ladda();
            l_ladda_tambah.click(function () {
                // Start loading
                l_ladda_tambah.ladda('start');
                // Do something in backend and then stop ladda
                // setTimeout() is only for demo purpose
            });

            $('.dataTables-List').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                scrollX:        true,
                scrollCollapse: true,
                "ordering": false,
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });
    </script>
}