@model sistem.manajemen.ppic.website.Models.MstWilayahModel
@{
    ViewBag.Title = "Master Wilayah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @using (Html.BeginForm("Edit", "MstWilayah", FormMethod.Post, new { @id = "IdForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label class="control-label">Wilayah</label>
                            @Html.HiddenFor(model => model.ID)
                            @Html.HiddenFor(model => model.CREATED_DATE)
                            @Html.HiddenFor(model => model.CREATED_BY)
                            @Html.HiddenFor(model => model.MODIFIED_BY)
                            @Html.HiddenFor(model => model.MODIFIED_DATE)
                            @Html.TextBoxFor(model => model.WILAYAH, new { @class = "form-control", @placeholder = "Nama Wilayah", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Kode</label>
                            @Html.TextBoxFor(model => model.KODE, new { @class = "form-control", @placeholder = "Kode Wilayah", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Status</label>
                            @Html.DropDownListFor(model => model.STATUS, Model.StatusList, "-- Please Select --", new { @class = "form-control", @required = "required" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
                            <a href="@Url.Action("Index","MstBarangJadi")" class="btn btn-default">Batal</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="changes" class="panel-body">
        @Html.Partial("_ChangesLog")
    </div>
</div>
